// Escape forward slashes, otherwise this won't compile
// i.e. .w-1\/3 {}
{{#bootstrap}}

$spacing-0: 0;
$spacing-small: 4px;
$spacing-medium: 8px;
$spacing-large: 16px;
$spacing-xl: 48px;

.wp-block-group {
	// write frontend and editor SASS here
	padding: var( --{{slug}}-padding )!important;

	&.p-0 {
		padding: $spacing-0!important;
	}
	&.p-1 {
		padding: $spacing-small!important;
	}
	&.p-2 {
		padding: $spacing-medium!important;
	}
	&.p-3 {
		padding: $spacing-large!important;
	}
	&.p-5 {
		padding: $spacing-xl!important;
	}
}
{{/bootstrap}}

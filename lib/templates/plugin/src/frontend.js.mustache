/**
 * External Dependencies
 */
import {
	hotFrontendLoader,
	registerFrontend,
} from '@blockhandbook/block-hot-loader';

/**
 * WordPress Dependencies
 */

/**
 * Internal Dependencies
 */

if ( module.hot ) {
	hotFrontendLoader( {
		getContext: () => require.context( './blocks', true, /frontend\.js$/ ),
		module,
	} );
} else {
	registerFrontend( {
		getContext: () => require.context( './blocks', true, /frontend\.js$/ ),
		module,
	} );
}

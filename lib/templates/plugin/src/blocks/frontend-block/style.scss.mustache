// Escape forward slashes, otherwise this won't compile
// i.e. .w-1\/3 {}

.entry-content .wp-block-{{slug}}-frontend-block {
	font-size:15px;
}

.wp-block-{{slug}}-frontend-block {
	// write frontend and editor SASS here
	{{#noCssFramework}}

	.bg-dark {
		background: #333;
		color: #fff;
		padding: 24px;
		border-radius: 0.5rem;
	}
	.bg-white {
		background: #fff;
		padding: 24px;
		border-radius: 0.5rem;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}
	{{/noCssFramework}}

	.components-toggle-control {

		label.components-toggle-control__label {
			font-size:15px;
			font-weight:600;
			margin-bottom:0;
		}

		.components-base-control__field .components-form-toggle {
			margin-right: 16px;
		}

		.components-base-control__field {
			display: flex;
			line-height: normal;
		}

	}

	.components-form-toggle {
		position: relative;
		display: inline-block;

		.components-form-toggle__on {
			outline: 1px solid transparent;
			outline-offset: -1px;
			border: 1px solid #000;
			filter: invert(100%) contrast(500%);
			left: 8px;
			position: absolute;
			top: 6px;
			height:6px;
			box-sizing: border-box;
		}

		.components-form-toggle__off {
			color: #6c7781;
			fill: currentColor;
			right: 6px;
			position: absolute;
			top: 6px;
			box-sizing: border-box;
		}

		input.components-form-toggle__input[type=checkbox] {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			opacity: 0;
			margin: 0;
			padding: 0;
			z-index: 1;
			border: none;
		}

		.components-form-toggle__track {
			content: "";
			display: inline-block;
			box-sizing: border-box;
			vertical-align: top;
			background-color: #fff;
			border: 2px solid #6c7781;
			width: 36px;
			height: 18px;
			border-radius: 9px;
			transition: background .2s ease;
		}

		input.components-form-toggle__input[type=checkbox]:checked {
			background:none;
		}

		.components-form-toggle__thumb {
			display: block;
			position: absolute;
			box-sizing: border-box;
			top: 4px;
			left: 4px;
			width: 10px;
			height: 10px;
			border-radius: 50%;
			transition: transform .1s ease;
			background-color: #6c7781;
			border: 5px solid #6c7781;
		}
	}

	.components-form-toggle:hover {

		.components-form-toggle__off {
			color: #555d66;
		}

		.components-form-toggle__thumb {
			background-color: #555d66;
			border: 5px solid #6c7781;
		}

	}

	.components-form-toggle.is-checked {

		.components-form-toggle__track {
			background-color: #11a0d2;
			border: 9px solid transparent;
		}

		.components-form-toggle__thumb {
			background-color: #fff;
			border-width: 0;
			transform: translateX(18px);
		}

	}

	input[type=checkbox]:focus {
		border-color: #757575;
		box-shadow: 0 0 0 1px #757575;
		cursor:pointer;
	}

}
